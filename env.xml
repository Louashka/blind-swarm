<mujoco model="ant_puzzle">
  <option timestep="0.01" gravity="0 0 -9.81" density="1.2" viscosity="0.1"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"/>
  </asset>

  <worldbody>
    <!-- Floor -->
    <geom name="floor" size="5 5 0.05" type="plane" material="groundplane"/>

    <!-- ================= WALLS (The Puzzle) ================= -->
    <!-- Simple representation of a barrier with a slit -->
    
    <!-- Left Wall Segment -->
    <geom name="wall_left" type="box" pos="1.5 1.0 0.2" size="0.1 1.5 0.2" rgba="0.5 0.5 0.5 1"/>
    
    <!-- Right Wall Segment -->
    <geom name="wall_right" type="box" pos="1.5 -1.0 0.2" size="0.1 1.5 0.2" rgba="0.5 0.5 0.5 1"/>
    
    <!-- (The gap between these two walls is the "slit") -->


    <!-- ================= THE T-SHAPED LOAD ================= -->
    <body name="load" pos="0 0 0.1">
      <!-- 
        PLANAR JOINTS with HIGH DAMPING 
        This restricts movement to 2D and kills momentum quickly (Overdamped)
      -->
      <joint name="slide_x" type="slide" axis="1 0 0" damping="5.0"/>
      <joint name="slide_y" type="slide" axis="0 1 0" damping="5.0"/>
      <joint name="hinge_z" type="hinge" axis="0 0 1" damping="5.0"/>

      <!-- The T-Shape Geometry -->
      <!-- Long bar (horizontal in local frame) -->
      <geom name="long_bar" type="box" size="0.5 0.1 0.1" rgba="0.8 0.2 0.2 1" density="50"/>
      
      <!-- Short bar (vertical in local frame, creating the T) -->
      <geom name="short_bar" type="box" pos="0 0.5 0" size="0.1 0.6 0.1" rgba="0.8 0.2 0.2 1" density="50"/>

    </body>
  </worldbody>
</mujoco>